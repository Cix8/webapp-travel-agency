@{
    ViewData["Title"] = "Messaggi"; 
}

@model List<Message>

<h2>Lista dei messaggi</h2>

@if (Model.Count > 0)
{
    <ul class="list-group flex-row flex-wrap">
        @foreach (Message mex in Model)
        {
            <li class="card my-3 me-3" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">@mex.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Da: @mex.Name</h6>
                    <h6 class="card-subtitle mb-2">Email: @mex.Email</h6>
                    <h6 class="card-subtitle mb-2">In merito al pacchetto-viaggi @mex.TravelPackage.Title</h6>
                    <p class="card-text">@mex.Content</p>
                </div>
            </li>
        }
    </ul>
}
else
{
    <h3>Nessun messaggio</h3>
    <a class="btn btn-primary" asp-area="" asp-controller="TravelPackage" asp-action="Index">Torna alla home</a>
}
