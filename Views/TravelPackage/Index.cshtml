@{
    ViewData["Title"] = "PackagesIndex";
}

@model List<TravelPackage>

<h2>Lista dei pacchetti disponibili</h2>

@if(Model.Count > 0) {
    <ul class="list-group flex-row flex-wrap">
        @foreach(TravelPackage package in Model) {
            <li class="card my-3 me-3" style="width: 25rem;">
                <img src="@package.Cover" class="card-img-top" style="height:15rem;">
                <div class="card-body">
                    <h2 class="card-title">@package.Title</h2>
                    <span class="d-block pb-3">Prezzo: € @package.Price</span>
                    <span class="d-block pb-3">Nr Destinazioni: @package.Destinations.Count</span>
                    <span class="d-block pb-3">Nr Messaggi collegati: @package.Messages.Count</span>
                    <a href="@Url.Action("Details", "TravelPackage", new {id = package.Id})" class="btn btn-primary">Visualizza pacchetto</a>
                </div>
            </li>
        }
    </ul>
} else {
    <h3>Nessun pacchetto disponibile attualmente</h3>
    <a class="btn btn-primary" asp-area="" asp-controller="TravelPackage" asp-action="Create">Aggiungi un nuovo pacchetto</a>
}